/* pages/analysis/analysis.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-icon, .error-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 30rpx;
}

.loading-text, .error-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.analysis-content {
  padding-bottom: 40rpx;
}

.problem-image-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.problem-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.image-actions {
  display: flex;
  justify-content: flex-end;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.ocr-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #666;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 6rpx solid #3cc51f;
}

.answer-section {
  margin-bottom: 30rpx;
}

.answer-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.answer-content {
  font-size: 32rpx;
  color: #3cc51f;
  font-weight: bold;
}

.steps-section {
  margin-bottom: 30rpx;
}

.steps-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.steps-list {
  padding-left: 20rpx;
}

.step-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.step-number {
  font-size: 28rpx;
  color: #3cc51f;
  font-weight: bold;
  margin-right: 10rpx;
  min-width: 40rpx;
}

.step-content {
  font-size: 30rpx;
  line-height: 1.5;
  color: #666;
  flex: 1;
}

.knowledge-section {
  margin-bottom: 20rpx;
}

.knowledge-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.knowledge-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.knowledge-tag {
  background-color: #e8f5e8;
  color: #3cc51f;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid #3cc51f;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 20rpx;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.action-btn.playing {
  background-color: #3cc51f;
  border-color: #3cc51f;
}

.action-btn.playing .btn-text {
  color: white;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.action-btn.playing .btn-icon {
  filter: brightness(0) invert(1);
}
