/* pages/camera/camera.wxss */
.camera-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #000;
}

.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  position: relative;
  z-index: 10;
}

.nav-left, .nav-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(0) invert(1);
}

.nav-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.camera-wrapper {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.camera {
  width: 100%;
  height: 100%;
}

.viewfinder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.viewfinder-frame {
  width: 100%;
  height: 100%;
  position: relative;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
}

.corner {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #3cc51f;
}

.top-left {
  top: -6rpx;
  left: -6rpx;
  border-right: none;
  border-bottom: none;
  border-top-left-radius: 20rpx;
}

.top-right {
  top: -6rpx;
  right: -6rpx;
  border-left: none;
  border-bottom: none;
  border-top-right-radius: 20rpx;
}

.bottom-left {
  bottom: -6rpx;
  left: -6rpx;
  border-right: none;
  border-top: none;
  border-bottom-left-radius: 20rpx;
}

.bottom-right {
  bottom: -6rpx;
  right: -6rpx;
  border-left: none;
  border-top: none;
  border-bottom-right-radius: 20rpx;
}

.viewfinder-tip {
  color: white;
  font-size: 28rpx;
  margin-top: 40rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.control-bar {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 40rpx 60rpx;
  background-color: rgba(0, 0, 0, 0.8);
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
}

.control-icon {
  width: 50rpx;
  height: 50rpx;
  filter: brightness(0) invert(1);
  margin-bottom: 10rpx;
}

.control-text {
  color: white;
  font-size: 24rpx;
}

.capture-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.capture-btn.capturing {
  transform: scale(0.9);
  background-color: #3cc51f;
}

.capture-inner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #3cc51f;
  transition: all 0.3s ease;
}

.capture-btn.capturing .capture-inner {
  background-color: white;
}
