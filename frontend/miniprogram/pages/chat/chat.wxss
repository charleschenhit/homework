/* pages/chat/chat.wxss */
.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.chat-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 2rpx solid #e0e0e0;
  position: relative;
  z-index: 10;
}

.header-left, .header-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.header-center {
  flex: 1;
  text-align: center;
}

.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.message-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-item {
  margin-bottom: 30rpx;
}

.message-content {
  display: flex;
  flex-direction: column;
  max-width: 80%;
}

.user-message {
  align-self: flex-end;
  align-items: flex-end;
}

.ai-message {
  align-self: flex-start;
  align-items: flex-start;
}

.message-bubble {
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  position: relative;
  word-wrap: break-word;
}

.user-bubble {
  background-color: #3cc51f;
  color: white;
  border-bottom-right-radius: 8rpx;
}

.ai-bubble {
  background-color: white;
  color: #333;
  border: 2rpx solid #e0e0e0;
  border-bottom-left-radius: 8rpx;
}

.message-text {
  font-size: 30rpx;
  line-height: 1.5;
}

.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

.audio-control {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
  padding: 10rpx 15rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  border: 2rpx solid #e0e0e0;
}

.audio-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.audio-text {
  font-size: 24rpx;
  color: #666;
}

.input-area {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
  border-top: 2rpx solid #e0e0e0;
}

.voice-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.voice-btn.recording {
  background-color: #ff4757;
  transform: scale(1.1);
}

.voice-icon {
  width: 40rpx;
  height: 40rpx;
}

.voice-btn.recording .voice-icon {
  filter: brightness(0) invert(1);
}

.text-input-wrapper {
  flex: 1;
  background-color: #f0f0f0;
  border-radius: 40rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
}

.text-input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
}

.send-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-btn.active {
  background-color: #3cc51f;
}

.send-icon {
  width: 40rpx;
  height: 40rpx;
}

.send-btn.active .send-icon {
  filter: brightness(0) invert(1);
}

.recording-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.recording-tip.show {
  opacity: 1;
  visibility: visible;
}

.recording-animation {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.wave {
  width: 8rpx;
  height: 40rpx;
  background-color: white;
  margin: 0 4rpx;
  border-radius: 4rpx;
  animation: wave 1s infinite ease-in-out;
}

.wave1 {
  animation-delay: 0s;
}

.wave2 {
  animation-delay: 0.2s;
}

.wave3 {
  animation-delay: 0.4s;
}

@keyframes wave {
  0%, 40%, 100% {
    transform: scaleY(0.4);
  }
  20% {
    transform: scaleY(1);
  }
}

.recording-text {
  font-size: 28rpx;
  text-align: center;
}
